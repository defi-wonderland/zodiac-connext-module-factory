{
  "name": "solidity-foundry-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Production ready Solidity boilerplate with Foundry",
  "homepage": "https://github.com/defi-wonderland/solidity-foundry-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/solidity-foundry-boilerplate.git"
  },
  "license": "MIT",
  "author": "Wonderland",
  "contributors": [
    "0xGorilla (https://github.com/0xGorilla)",
    "0xng (https://github.com/0xng)",
    "gas1cent (https://github.com/gas1cent)"
  ],
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "coverage": "forge coverage --match-contract Unit",
    "deploy:arbitrum": "bash -c 'source .env && forge script DeployArbitrum --rpc-url $ARBITRUM_RPC --broadcast --private-key $ARBITRUM_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:bnb": "bash -c 'source .env && forge script DeployBNB --rpc-url $BNB_RPC --broadcast --private-key $BNB_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:gnosis": "bash -c 'source .env && forge script DeployGnosis --rpc-url $GNOSIS_RPC --broadcast --private-key $GNOSIS_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:goerli": "bash -c 'source .env && forge script DeployGoerli --rpc-url $GOERLI_RPC --broadcast --private-key $GOERLI_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:mainnet": "bash -c 'source .env && forge script DeployMainnet --rpc-url $MAINNET_RPC --broadcast --private-key $MAINNET_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:optimism": "bash -c 'source .env && forge script DeployOptimism --rpc-url $OPTIMISM_RPC --broadcast --private-key $OPTIMISM_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deploy:polygon": "bash -c 'source .env && forge script DeployPolygon --rpc-url $POLYGON_RPC --broadcast --private-key $POLYGON_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:arbitrum": "bash -c 'source .env && forge script DeployModule --rpc-url $ARBITRUM_RPC --broadcast --private-key $ARBITRUM_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:bnb": "bash -c 'source .env && forge script DeployModule --rpc-url $BNB_RPC --broadcast --private-key $BNB_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:gnosis": "bash -c 'source .env && forge script DeployModule --rpc-url $GNOSIS_RPC --broadcast --private-key $GNOSIS_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:goerli": "bash -c 'source .env && forge script DeployModule --rpc-url $GOERLI_RPC --broadcast --private-key $GOERLI_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:mainnet": "bash -c 'source .env && forge script DeployModule --rpc-url $MAINNET_RPC --broadcast --private-key $MAINNET_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:optimism": "bash -c 'source .env && forge script DeployModule --rpc-url $OPTIMISM_RPC --broadcast --private-key $OPTIMISM_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "deployModule:polygon": "bash -c 'source .env && forge script DeployModule --rpc-url $POLYGON_RPC --broadcast --private-key $POLYGON_DEPLOYER_PK --verify --etherscan-api-key $ETHERSCAN_API_KEY'",
    "filter-coverage": "lcov --remove lcov.info -o lcov.info 'node_modules/**/*.sol' 'solidity/test/**/*.sol' 'solidity/scripts/*.sol'",
    "lint:check": "yarn lint:sol-tests && yarn lint:sol-logic && forge fmt check",
    "lint:fix": "sort-package-json && forge fmt && yarn lint:sol-tests --fix && yarn lint:sol-logic --fix",
    "lint:sol-logic": "cross-env solhint -c .solhint.json 'solidity/contracts/**/*.sol' 'solidity/interfaces/**/*.sol'",
    "lint:sol-tests": "cross-env solhint 'solidity/test/**/*.sol'",
    "prepare": "husky install",
    "report": "yarn coverage --report lcov && yarn filter-coverage && genhtml lcov.info -o coverage --branch-coverage",
    "test": "forge test -vvv",
    "test:e2e": "forge test --match-contract E2E -vvv",
    "test:unit": "forge test --match-contract Unit -vvv",
    "test:unit:deep": "FOUNDRY_FUZZ_RUNS=5000 yarn test:unit"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.sol": "cross-env solhint --fix 'solidity/**/*.sol'",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@gnosis.pm/safe-contracts": "github:safe-global/safe-contracts.git#v1.3.0",
    "@gnosis.pm/zodiac": "github:gnosis/zodiac#v3.3.2",
    "@gnosis.pm/zodiac-module-connext": "github:gnosis/zodiac-module-connext#b29f5d8",
    "@openzeppelin/contracts": "github:OpenZeppelin/openzeppelin-contracts#v4.8.3",
    "@openzeppelin/contracts-upgradeable": "github:OpenZeppelin/openzeppelin-contracts-upgradeable#v4.8.3",
    "ds-test": "github:dapphub/ds-test#e282159",
    "forge-std": "github:foundry-rs/forge-std#v1.5.6",
    "isolmate": "github:defi-wonderland/isolmate#59e1804",
    "prb/test": "github:paulrberg/prb-test#a245c71"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "cross-env": "7.0.3",
    "husky": ">=8",
    "lint-staged": ">=10",
    "solhint": "3.3.6",
    "solhint-plugin-defi-wonderland": "1.1.0",
    "sort-package-json": "1.53.1"
  }
}
